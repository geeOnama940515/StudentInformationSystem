@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Are you sure you want to delete this student?</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    
    <dt class="col-sm-2">Grade Level</dt>
    <dd class="col-sm-10">@Model.GradeLevel</dd>
    
    <dt class="col-sm-2">Section</dt>
    <dd class="col-sm-10">@Model.Section</dd>

    <dt class="col-sm-2">Contact Number</dt>
    <dd class="col-sm-10">@Model.ContactNumber</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
